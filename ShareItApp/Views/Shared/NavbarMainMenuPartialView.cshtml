@using ShareIt.Core.Application
@model string

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Publication" asp-action="Index">ShareIt</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Publication" asp-action="Index">My Publications</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Friendship" asp-action="Index">Friends</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">My Profile</a>
                    </li>

                </ul>
                <ul class="navbar-nav">
                <li class="nav-item">
                    <h4 class="ms-3 mt-1">Bienvenido @Model | </h4>
                </li>
                <li class="nav-item">
                    <form id="logoutForm" asp-controller="User" asp-action="LogOut" method="post"
                          class="form-inline">
                        <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                    </form>
                </li>
            </div>
            </ul>
        </div>
    </nav>
</header>




