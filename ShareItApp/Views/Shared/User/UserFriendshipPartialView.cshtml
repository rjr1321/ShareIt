@using ShareIt.Core.Application
@model UserFriendshipViewModel

<div class="card text-center" style="width: 10rem;">
    <div class="mt-3">
        <img class="rounded-circle align-middle" style="height: 100px; width: 100px;" src="@Model.Photo" />
    </div>

    <div class="card-body">
        <h5 class="card-title">@Model.Username</h5>
        <p class="card-text">@Model.Name @Model.LastName</p>
    </div>
    <div class="card-body">

        @if (Model.Added)
        {
            <form method="post" asp-controller="Friendship" asp-action="Delete">
                <input hidden value="@Model.Id" asp-for="svm.IdFriend" />
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-danger" type="submit">Unfriend</button>
                </div>
            </form>
        }
        else
        {
            <form method="post" asp-controller="Friendship" asp-action="Add">
                <input hidden value="@Model.Id" asp-for="svm.IdFriend" />
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-success" type="submit">Add</button>
                </div>
            </form>
        }
        
    </div>
</div>